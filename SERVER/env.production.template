# WCFinder Backend - Production Environment Variables Template
# Bu dosyayı kopyalayıp .env.production olarak kaydedin ve değerleri doldurun
# NOT: Bu dosya .gitignore'da olduğu için git'e commit edilmeyecek

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=8000
HOST=0.0.0.0
NODE_ENV=production

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Atlas connection string
MONGODB=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/wcfinder?retryWrites=true&w=majority

# ============================================
# JWT AUTHENTICATION
# ============================================
# GÜVENLİ RANDOM STRINGLER OLUŞTURUN! (minimum 32 karakter)
ACCESS_KEY=your_access_secret_key_here_minimum_32_characters_long
REFRESH_KEY=your_refresh_secret_key_here_minimum_32_characters_long

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# ============================================
# STRIPE PAYMENT (PRODUCTION KEYS)
# ============================================
# Replace with your actual Stripe secret key from Stripe Dashboard
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY_HERE
# Replace with your actual Stripe webhook secret from Stripe Dashboard
STRIPE_WEBHOOK_SECRET=whsec_YOUR_STRIPE_WEBHOOK_SECRET_HERE

# ============================================
# PAYPAL PAYMENT (PRODUCTION KEYS)
# ============================================
PAYPAL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYPAL_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# ============================================
# PROXY & SECURITY
# ============================================
TRUST_PROXY=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5
PAYMENT_RATE_LIMIT_WINDOW_MS=60000
PAYMENT_RATE_LIMIT_MAX_REQUESTS=5

# ============================================
# REQUEST SIZE LIMIT
# ============================================
MAX_BODY_SIZE=10mb

